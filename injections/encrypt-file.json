[
  {
    "description": "Encrypt the file /root/important.txt using openssl and the -aes-256-cbc method and the key a3b0c7. Save the output in a file named /root/important.txt.enc.",
    "create": {
      "init": [
        "echo 'data' > /root/important.txt",
        "apt-get update && apt-get install -y libssl-dev"
      ]
    },
    "evaluation": {
      "check": [
        "openssl enc -aes-256-cbc -d -in /root/important.txt.enc -out /root/important.txt.dec -k a3b0c7",
        "grep -q 'data' /root/important.txt.dec && exit 0 || exit 1"
      ]
    }
  }
]
